<h2 class="auth-title">Editar Usuário</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'signup-form' }) do |f| %>

  <% if resource.errors.any? %>
    <div style="color: red">
      <h2>Erros ao tentar salvar o Usuário:</h2>

      <ul>
        <% resource.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="input-auth">
      <%= f.label :email, "Email", class: 'auth-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'auth-input' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="field">
      <div class="input-auth">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <div class="input-auth">
      <%= f.label :password, "Senha", class: 'auth-label' %> <i>(Deixe em branco se não deseja alterar)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'auth-input' %>
      <% if @minimum_password_length %>
        <br />
        <em class="password-hint"><%= @minimum_password_length %> carateces mínimos</em>
      <% end %>
    </div>
  </div>

  <div class="field">
    <div class="input-auth">
      <%= f.label :password_confirmation, "Confirmação de Senha", class: 'auth-label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'auth-input' %>
    </div>
  </div>

  <div class="field">
    <div class="input-auth">
      <%= f.label :current_password, "Senha Atual", class: 'auth-label' %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'auth-input' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar", class: "auth-button" %>
  </div>
<% end %>

<h3 class="auth-title">Deletar minha conta</h3>

<div class="field">
 <%= button_to "Deletar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "auth-button" %>
</div>

<div class="field">
  <%= link_to "Voltar", lists_path, class: "auth-button" %>
</div>

<div class=item>
  <%= render @task %>

  <div>

    <%= button_to edit_list_task_path(@task.list_id, @task), method: :get, class: 'action-button' do %>
      Editar
    <% end %>

    <%= button_to list_tasks_path, method: :get, class: 'action-button' do %>
      Voltar
    <% end %>

    <%= button_to "Deletar Tarefa", list_task_path(@task.list_id, @task), method: :delete, class: "delete-button" %>

  </div>
</div>